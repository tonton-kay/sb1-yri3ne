{% if section.settings.show_announcement %}
<div class="announcement-bar" role="region" aria-label="Announcement">
  <div class="page-width">
    {% if section.settings.announcement_text != blank %}
      <div class="announcement-slider" data-autoplay="{{ section.settings.enable_autoplay }}">
        <div class="announcement-slide">
          <p class="announcement-text">{{ section.settings.announcement_text }}</p>
        </div>
        {% if section.settings.announcement_text_2 != blank %}
          <div class="announcement-slide">
            <p class="announcement-text">{{ section.settings.announcement_text_2 }}</p>
          </div>
        {% endif %}
        {% if section.settings.announcement_text_3 != blank %}
          <div class="announcement-slide">
            <p class="announcement-text">{{ section.settings.announcement_text_3 }}</p>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>
{% endif %}

