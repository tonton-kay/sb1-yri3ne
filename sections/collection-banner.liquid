{% if section.settings.show_banner %}
<div class="collection-banner relative h-[300px] overflow-hidden">
  {% if section.settings.banner_image != blank %}
    <img
      src="{{ section.settings.banner_image | img_url: '2000x' }}"
      alt="{{ collection.title }}"
      class="w-full h-full object-cover"
    >
  {% endif %}
  <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
    <div class="text-center text-white">
      <h1 class="text-4xl font-bold mb-4">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <p class="text-lg max-w-2xl mx-auto">{{ collection.description }}</p>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Collection Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Show banner",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    }
  ]
}
{% endschema %}